<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joseandres.botongrabar.MainActivity"
    android:background="#81f5e0">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grabar"
        android:id="@+id/btn1"
        android:layout_above="@+id/btn2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="85dp"
        android:textSize="30dp"
        android:background="#080303"
        android:textColor="#f70505"
        android:onClick="grabar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DETENER"
        android:id="@+id/btn2"
        android:textSize="27dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#090303"
        android:textColor="#f70505"
        android:onClick="detener" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REPRODUCIR"
        android:id="@+id/btn3"
        android:layout_below="@+id/btn2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="77dp"
        android:textSize="30dp"
        android:background="#0c0404"
        android:textColor="#f50606"
        android:onClick="reproducir" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GRABADOR DE ARCHIVOS"
        android:id="@+id/tv1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="28dp"
        android:textColor="#0b0606" />
</RelativeLayout>
